<html>
<head>
    <title>Login</title>
</head>
<body>
    {{#error}}
        <span class="formerror">{{error}}</span>
    {{/error}}
    <form action="/login" method="post">
        Username <input type="text" name="username"/>
        <br/>
        Password <input type="password" name="password"/>
        <br/>
        <input type="submit"/>
    </form>
</body>
</html>
